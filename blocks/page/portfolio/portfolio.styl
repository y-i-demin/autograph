.slider
  position: absolute

  width: 100%
  height: 100%

  &_controls
    position: relative

    width: 76px
    height: 15%
    margin: 0 auto

    white-space: nowrap

  &_group
    position: absolute
    left: 0

    width: 100%
    height: 85%

    list-style: none
    background-color: #273440
    transition: left 0.35s ease-in

    &_item
      position: relative

      float: left

      width: 25%
      height: 100%

      background-color: #273440

      overflow: hidden
      cursor: pointer

      &_preview
        position: relative

        width: 100%
        height: 50%

        background-repeat: no-repeat
        background-position: center
        background-size: cover

        &::before
          position: absolute
          left: 0

          width: 100%
          height: 100%

          background-color #273440
          opacity: 0.6
          content: " "

        &:hover::before
          left: -100%

  &_dots
    list-style: none

.bt_left,
.bt_right
  position: absolute

  display: block
  width: 78px
  height: 39px

  background-image: url("../i/slider-controls.png")
  background-image: url("data:image/png;base64,")

  cursor: pointer

.bt_left
  left: -174px

.bt_right
  background-position: -22px top
  right: -174px

.bt_dot
  float: left
  width: 10px
  height: 39px
  margin: 0 14px

  background-repeat: no-repeat
  background-position: -10px center
  background-image: url("../i/slider-dots.png")
  background-image: url("data:image/png;base64,")

  cursor: pointer

  &__active
  &:hover
    background-position: left center
